// --------------------------------------------------
// Height
// --------------------------------------------------
+prefix-classes('h-')
  for $num in space_number_list
    .{$num}
      height: 0.25rem * $num

  .px
    height: 1px

  .auto
    height: auto

  .full
    height: 100%

  .screen
    height: 100vh


// --------------------------------------------------
// Min height
// --------------------------------------------------
min_height(val)
  min-height: val

+prefix-classes('min-h-')
  .0
    min_height 0

  .full
    min_height 100%

  .screen
    min_height 100vh


// --------------------------------------------------
// Max height
// --------------------------------------------------
max_height(val)
  max-height: val

+prefix-classes('max-h-')
  .full
    max_height 100%

  .screen
    max_height 100vh