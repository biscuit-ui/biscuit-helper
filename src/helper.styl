// --------------------------------------------------
// Flex
// --------------------------------------------------
+prefix-classes('flex-')
 .initial
   flex: 0 1 auto

  .1
    flex: 1 1 0%

  .auto
    flex: 1 1 auto

  .none
    flex: none


// --------------------------------------------------
// Flex grow, shrink
// --------------------------------------------------
