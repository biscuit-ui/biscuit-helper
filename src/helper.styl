// --------------------------------------------------
// Margin
// --------------------------------------------------
+prefix-classes('m-')
  for $num in space_number_list
    .{$num}
      margin: 0.25rem * $num

  .px
    margin: 1px

  .auto
    margin: auto

  for $num in slice(space_number_list, 1)
    .n-{$num}
      margin: -0.25rem * $num

  .n-px
    margin: -1px

  for $num in space_number_list
    .y-{$num}
      margin-top: 0.25rem * $num
      margin-bottom: 0.25rem * $num

  .y-auto
    margin-top: auto
    margin-bottom: auto

  .y-px
    margin-top: 1px
    margin-bottom: 1px

  for $num in slice(space_number_list, 1)
    .y-n-{$num}
      margin-top: -0.25rem * $num
      margin-bottom: -0.25rem * $num

  .y-n-px
    margin-top: -1px
    margin-bottom: -1px

  for $num in space_number_list
    .x-{$num}
      margin-left: 0.25rem * $num
      margin-right: 0.25rem * $num

  .x-auto
    margin-left: auto
    margin-right: auto

  .x-px
    margin-left: 1px
    margin-right: 1px

  for $num in slice(space_number_list, 1)
    .x-n-{$num}
      margin-left: -0.25rem * $num
      margin-right: -0.25rem * $num

  .x-n-px
    margin-left: -1px
    margin-right: -1px

  for $name, $position in position_dict
    for $num in space_number_list
      .{$name}-{$num}
        margin-{$position}: 0.25rem * $num

    .{$name}-auto
      margin-{$position}: auto

    .{$name}-px
      margin-{$position}: 1px

  for $name, $position in position_dict
    for $num in slice(space_number_list, 1)
      .{$name}-{$num}
        margin-{$position}: -0.25rem * $num

    .{$name}-n-px
      margin-{$position}: -1px


// --------------------------------------------------
// Padding
// --------------------------------------------------
+prefix-classes('p-')
  for $num in space_number_list
    .{$num}
      padding: 0.25rem * $num

  .px
    padding: 1px

  for $num in space_number_list
    .y-{$num}
      padding-top: 0.25rem * $num
      padding-bottom: 0.25rem * $num

  .y-px
    padding-top: 1px
    padding-bottom: 1px

  for $num in space_number_list
    .x-{$num}
      padding-left: 0.25rem * $num
      padding-right: 0.25rem * $num

  .x-px
    padding-left: 1px
    padding-right: 1px

  for $name, $position in position_dict
    for $num in space_number_list
      .{$name}-{$num}
        padding-{$position}: 0.25rem * $num

    .{$name}-px
      padding-{$position}: 1px



// --------------------------------------------------
// Width
// --------------------------------------------------
+prefix-classes('w-')
  for $num in space_number_list
    .{$num}
      width: 0.25rem * $num

  .auto
    width: auto

  .full
    width: 100%

  .screen
    width: 100vw

  .px
    width: 1px

  // 设置百分比
  for $num1 in 2 3 4 5 6 12
    for $num2 in 1...$num1
      .{$num2}-{$num1}
        width: percentage($num2/$num1)


// --------------------------------------------------
// Min width
// --------------------------------------------------
+prefix-classes('min-w-')
  .0
    min-width: 0

  .full
    min-width: 100%


// --------------------------------------------------
// Max width
// --------------------------------------------------
max_w_xs($num=0)
  max-width: 28rem + $num

+prefix-classes('max-w-')
  .xs
    max_w_xs(-8)

  .sm
    max_w_xs(-4)

  .md
    max_w_xs()

  .lg
    max_w_xs(4)

  .xl
    max_w_xs(8)

  .2xl
    max_w_xs(14)

  .3xl
    max_w_xs(20)

  .4xl
    max_w_xs(28)

  .5xl
    max_w_xs(36)

  .6xl
    max_w_xs(44)

  .full
    max-width: 100%


// --------------------------------------------------
// Height
// --------------------------------------------------
+prefix-classes('h-')
  for $num in space_number_list
    .{$num}
